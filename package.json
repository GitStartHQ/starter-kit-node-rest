{
  "name": "koa2-es2017-api-boilerplate",
  "version": "1.0.0",
  "description": "Rest API boilerplate using Koa2 and ES2017",
  "author": "Pranav Prakash <pranav@pranavprakash.net>",
  "main": "dist/index.js",
  "engines": {
    "node": "~8.5.0",
    "npm": ">=5.3.0"
  },
  "scripts": {
    "prestart": "npm run -s build",
    "start": "node dist/src/index.js",
    "start:dev": "nodemon --watch src/**/* -e ts,tsx --exec ts-node --extensions '.ts,.tsx' src/index.ts",
    "dev": "concurrently \"npm run start:dev\" \"npm run type-check:watch\" ",
    "clean": "rimraf dist",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "lint": "prettier --write \"{src,test}/**/*{js,ts}\"",
    "prettier": "prettier --list-different \"{src,test}/**/*{js,ts}\"",
    "precommit": "lint-staged",
    "codecov": "codecov"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "npm run lint",
      "git add"
    ]
  },
  "keywords": [
    "koa2",
    "babel",
    "es6",
    "es2015",
    "es2016",
    "es2017",
    "jest"
  ],
  "license": "MIT",
  "dependencies": {
    "@koa/cors": "2",
    "@types/dotenv": "^4.0.3",
    "@types/es6-promise": "^3.3.0",
    "@types/koa": "^2.0.46",
    "@types/koa-bodyparser": "^5.0.1",
    "@types/koa-morgan": "^1.0.4",
    "@types/koa-router": "^7.0.32",
    "@types/koa__cors": "^2.2.3",
    "@types/node": "^10.11.3",
    "@types/supertest": "^2.0.6",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-morgan": "^1.0.1",
    "koa-router": "^7.2.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/plugin-transform-typescript": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "@types/jest": "^23.3.3",
    "codecov": "^3.1.0",
    "concurrently": "^4.0.1",
    "dotenv": "^4.0.0",
    "husky": "^1.1.0",
    "jest": "^23.6.0",
    "lint-staged": "^7.3.0",
    "nodemon": "^1.12.1",
    "prettier": "1.14.3",
    "supertest": "^3.0.0",
    "ts-jest": "^23.10.4",
    "ts-node": "^7.0.1",
    "typescript": "^3.1.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/typescript"
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "sourceMaps": true,
    "retainLines": true
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/.circle/",
      "<rootDir>/dist/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(t|j)s?$": "ts-jest"
    }
  },
  "directories": {
    "test": "test"
  }
}
