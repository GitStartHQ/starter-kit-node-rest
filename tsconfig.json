{
  "compilerOptions": {
    "lib": ["es6"],
    "types": ["node", "jest"],
    "target": "es6",
    "pretty": true,
    "module": "commonjs",
    "outDir": "./dist",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "allowJs": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test"]
}
